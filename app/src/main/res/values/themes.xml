<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MVVMErrorHandling" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_green</item>
        <item name="colorPrimaryVariant">@color/green</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="primaryTitleStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/dark_gray</item>
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="primaryButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:backgroundTint">@color/green</item>
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="cornerRadius">4dp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="secondaryButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:backgroundTint">@color/light_green</item>
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="cornerRadius">4dp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="secondaryTitleStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/dark_gray</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ternaryTitleStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/dark_gray</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="descriptionTestStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/dark_gray</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Widget.App.Button.OutlinedButton.IconOnly" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="iconSize">20dp</item>
    </style>

</resources>